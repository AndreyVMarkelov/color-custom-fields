<?xml version="1.0" encoding="UTF-8"?>
<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <param name="plugin-logo">/media/logo.png</param>
        <param name="plugin-icon">/media/icon.png</param>
        <param name="vendor-icon">/media/vicon.png</param>
        <param name="vendor-logo">/media/vicon.png</param>
    </plugin-info>

    <customfield-type key="select-color-custom-field" name="Select Color Custom Field" class="ru.andreymarkelov.atlas.plugins.jira.colorfields.SelectColorCustomField">
        <description>The Color Custom Field Plug-In</description>
        <resource type="velocity" name="view" location="/templates/ru/andreymarkelov/atlas/plugins/jira/colorfields/view-colorpicker.vm"/>
        <resource type="velocity" name="column-view" location="/templates/ru/andreymarkelov/atlas/plugins/jira/colorfields/view-colorpicker.vm"/>
        <resource type="velocity" name="edit" location="/templates/ru/andreymarkelov/atlas/plugins/jira/colorfields/view-colorpicker.vm"/>
        <resource type="velocity" name="xml" location="/templates/ru/andreymarkelov/atlas/plugins/jira/colorfields/view-colorpicker.vm"/>
    </customfield-type>

    <customfield-type key="picker-color-custom-field" name="Picker Color Custom Field" class="ru.andreymarkelov.atlas.plugins.jira.colorfields.ColorPickerField">
        <description>The Color Picker Field Plugin</description>
        <resource name="view" type="velocity" location="/templates/ru/andreymarkelov/atlas/plugins/jira/colorfields/view-colorpicker.vm"/>
        <resource name="column-view" type="velocity" location="/templates/ru/andreymarkelov/atlas/plugins/jira/colorfields/view-colorpicker.vm"/>
        <resource name="xml" type="velocity" location="/templates/ru/andreymarkelov/atlas/plugins/jira/colorfields/view-colorpicker.vm"/>
        <resource name="edit" type="velocity" location="/templates/ru/andreymarkelov/atlas/plugins/jira/colorfields/view-colorpicker.vm"/>
    </customfield-type>

    <customfield-searcher key="color-searcher" name="Select Color Custom Field Searcher" class="com.atlassian.jira.issue.customfields.searchers.SelectSearcher">
        <description>Search for Color</description>
        <resource type="velocity" name="search" location="templates/plugins/fields/edit-searcher/search-select.vm"/>
        <resource type="velocity" name="view" location="templates/plugins/fields/view-searcher/view-searcher-select.vm"/>
        <resource type="velocity" name="label" location="templates/plugins/fields/view-searcher/label-searcher-htmltext.vm"/>
        <valid-customfield-type package="${project.groupId}.${project.artifactId}" key="select-color-custom-field"/>
    </customfield-searcher>

    <web-resource key="color-resources" name="Color Custom Fields Resources">
        <resource type="download" name="color_field_script.js" location="media/color_field_script.js"/>
        <resource type="download" name="colorPicker.css" location="media/colorPicker.css"/>
        <resource type="download" name="jquery.colorPicker.js" location="media/jquery.colorPicker.js"/>
        <resource type="download" name="arrow.png" location="media/arrow.png"/>
        <context>atl.general</context>
    </web-resource>

    <component key="ComponentFactory" name="Component Factory" class="com.atlassian.jira.util.JiraComponentFactory">
        <interface>com.atlassian.jira.util.ComponentFactory</interface>
    </component>
    <component key="ComponentLocator" name="Component Locator" class="com.atlassian.jira.util.JiraComponentLocator">
        <interface>com.atlassian.jira.util.ComponentLocator</interface>
    </component>

    <resource type="i18n" name="color-i18n" location="i18n.color"/>
</atlassian-plugin>
